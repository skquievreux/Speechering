{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Voice Transcriber",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/venv/Scripts/python.exe",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Python: Build Script",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/build.py",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/venv/Scripts/python.exe"
    },
    {
      "name": "Python: Icon Generator",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/assets/icon_generator.py",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/venv/Scripts/python.exe",
      "cwd": "${workspaceFolder}/assets"
    }
  ]
}
